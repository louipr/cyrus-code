{
  "name": "cyrus-code",
  "version": "0.1.0",
  "description": "Hardware-inspired software component architecture tool",
  "main": "dist/electron/main.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cyrus-code": "./dist/src/cli/index.js"
  },
  "scripts": {
    "preinstall": "node -e \"if(+process.versions.node.split('.')[0]<20){console.error('Node 20+ required. Found: '+process.version);process.exit(1)}\"",
    "build": "tsc -p tsconfig.build.json",
    "build:gui": "vite build",
    "build:all": "npm run build && npm run build:gui",
    "dev": "tsc --watch",
    "dev:gui": "vite",
    "electron": "npm run build:all && electron-rebuild -f -w better-sqlite3 && unset ELECTRON_RUN_AS_NODE && electron .",
    "electron:dev": "concurrently \"tsc -p tsconfig.build.json --watch\" \"vite build --watch\" \"sleep 3 && unset ELECTRON_RUN_AS_NODE && electron .\"",
    "test": "npm rebuild better-sqlite3 && tsc && node --test $(find dist/src -name '*.test.js')",
    "test:gui": "tsc -p tsconfig.gui.json --noEmit",
    "test:e2e": "npm run build:all && electron-rebuild -f -w better-sqlite3 && playwright test",
    "test:all": "npm run test && npm run test:gui",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "component",
    "architecture",
    "symbol-table",
    "code-generation",
    "composition"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.0",
    "electron": "^29.4.6",
    "playwright": "^1.57.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "ts-morph": "^24.0.0",
    "zod": "^3.24.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
